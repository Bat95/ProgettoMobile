<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    android:id="@+id/recipe_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/primaryBackground">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="270dp"
        android:layout_margin="8dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/recipe_image"
        android:layout_width="230dp"
        android:layout_height="140dp"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/image_not_available"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/recipe_name"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|start"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:maxLines="5"
        android:layout_below="@+id/recipe_image"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:paddingTop="5dp"
        android:text="@string/nome_ricetta"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="20dp"
        android:layout_below="@+id/recipe_name"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/layout_time"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/recipe_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/detail_time"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/recipe_time_value"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="5"
            android:padding="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/layout_time"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="8dp">

        <TextView
            android:id="@+id/detail_difficulty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/detail_difficulty"
            android:paddingEnd="8dp"
            android:textSize="12sp"/>

        <ImageView
            android:id="@+id/difficulty_icon_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/difficulty_icon"
            android:maxHeight="15dp"
            android:maxWidth="15dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/icona_difficolta"
            android:layout_margin="2dp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/difficulty_icon_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/difficulty_icon"
            android:maxHeight="15dp"
            android:maxWidth="15dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/icona_difficolta"
            android:layout_margin="2dp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/difficulty_icon_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/difficulty_icon"
            android:maxHeight="15dp"
            android:maxWidth="15dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/icona_difficolta"
            android:layout_margin="2dp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/difficulty_icon_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/difficulty_icon"
            android:maxHeight="15dp"
            android:maxWidth="15dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/icona_difficolta"
            android:layout_margin="2dp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/difficulty_icon_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/difficulty_icon"
            android:maxHeight="15dp"
            android:maxWidth="15dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/icona_difficolta"
            android:layout_margin="2dp"
            android:visibility="gone"/>

    </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</android.support.design.widget.CoordinatorLayout>