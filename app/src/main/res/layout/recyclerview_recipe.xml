<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/recipelayout"
    android:layout_alignParentStart="true">

    <ImageView
        android:id="@+id/recipe_image"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:maxWidth="180dp"
        android:minWidth="180dp"
        android:maxHeight="110dp"
        android:minHeight="110dp"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/image_not_available"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/recipe_name"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|start"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:maxLines="5"
        android:layout_below="@+id/recipe_image"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/layout_relative"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:id="@+id/detail_difficulty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/detail_difficulty"
            android:textSize="12sp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingStart="10dp"
            android:paddingEnd="5dp"/>

        <ImageView
            android:id="@+id/difficulty_icon_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/difficulty_icon"
            android:maxHeight="15dp"
            android:maxWidth="15dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/icona_difficolta"
            android:layout_margin="2dp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/difficulty_icon_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/difficulty_icon"
            android:maxHeight="15dp"
            android:maxWidth="15dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/icona_difficolta"
            android:layout_margin="2dp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/difficulty_icon_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/difficulty_icon"
            android:maxHeight="15dp"
            android:maxWidth="15dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/icona_difficolta"
            android:layout_margin="2dp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/difficulty_icon_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/difficulty_icon"
            android:maxHeight="15dp"
            android:maxWidth="15dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/icona_difficolta"
            android:layout_margin="2dp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/difficulty_icon_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/difficulty_icon"
            android:maxHeight="15dp"
            android:maxWidth="15dp"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/icona_difficolta"
            android:layout_margin="2dp"
            android:visibility="gone"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="20dp"
        android:layout_below="@+id/recipe_name"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/layout_relative">
        <TextView
            android:id="@+id/recipe_time"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="5"
            android:padding="5dp"/>

    </RelativeLayout>

</RelativeLayout>