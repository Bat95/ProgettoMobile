<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryBackground">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/header_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/holo_purple">

                    <ImageView
                        android:id="@+id/detail_image"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/immagine_ricetta"
                        app:srcCompat="@drawable/image_not_available"
                        android:paddingBottom="5dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:scaleType="centerCrop"/>

                    <TextView
                        android:id="@+id/titoloRicettaDettaglio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:text="@string/RecipeTitleDetail"
                        android:padding="10dp"
                        android:paddingStart="10dp"
                        android:paddingEnd="60dp"
                        android:layout_alignBottom="@+id/detail_image"
                        android:background="@drawable/header_gradient_selector"/>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/primaryBackground"
                    android:orientation="vertical"
                    >

                    <android.support.v7.widget.CardView
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="15dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/detail_difficulty"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/detail_difficulty"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    android:padding="5dp" />

                                <ImageView
                                    android:id="@+id/difficulty_icon_1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:adjustViewBounds="true"
                                    app:srcCompat="@drawable/difficulty_icon"
                                    android:maxHeight="15dp"
                                    android:maxWidth="15dp"
                                    android:layout_gravity="center_vertical"
                                    android:contentDescription="@string/icona_difficolta"
                                    android:layout_margin="2dp"
                                    android:visibility="gone"/>

                                <ImageView
                                    android:id="@+id/difficulty_icon_2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:adjustViewBounds="true"
                                    app:srcCompat="@drawable/difficulty_icon"
                                    android:maxHeight="15dp"
                                    android:maxWidth="15dp"
                                    android:layout_gravity="center_vertical"
                                    android:contentDescription="@string/icona_difficolta"
                                    android:layout_margin="2dp"
                                    android:visibility="gone"/>

                                <ImageView
                                    android:id="@+id/difficulty_icon_3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:adjustViewBounds="true"
                                    app:srcCompat="@drawable/difficulty_icon"
                                    android:maxHeight="15dp"
                                    android:maxWidth="15dp"
                                    android:layout_gravity="center_vertical"
                                    android:contentDescription="@string/icona_difficolta"
                                    android:layout_margin="2dp"
                                    android:visibility="gone"/>

                                <ImageView
                                    android:id="@+id/difficulty_icon_4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:adjustViewBounds="true"
                                    app:srcCompat="@drawable/difficulty_icon"
                                    android:maxHeight="15dp"
                                    android:maxWidth="15dp"
                                    android:layout_gravity="center_vertical"
                                    android:contentDescription="@string/icona_difficolta"
                                    android:layout_margin="2dp"
                                    android:visibility="gone"/>

                                <ImageView
                                    android:id="@+id/difficulty_icon_5"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:adjustViewBounds="true"
                                    app:srcCompat="@drawable/difficulty_icon"
                                    android:maxHeight="15dp"
                                    android:maxWidth="15dp"
                                    android:layout_gravity="center_vertical"
                                    android:contentDescription="@string/icona_difficolta"
                                    android:layout_margin="2dp"
                                    android:visibility="gone"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/detail_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/detail_time"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    android:padding="5dp" />

                                <TextView
                                    android:id="@+id/time_value"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/unknown"
                                    android:padding="5dp"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/detail_dose"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/detail_dose"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    android:padding="5dp" />

                                <TextView
                                    android:id="@+id/dose_value"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/unknown"
                                    android:padding="5dp"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/detail_category"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/detail_category"
                                    android:textSize="15sp"
                                    android:textStyle="bold"
                                    android:padding="5dp" />

                                <TextView
                                    android:id="@+id/category_value"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/unknown"
                                    android:padding="5dp"/>

                            </LinearLayout>

                        </LinearLayout>
                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/detail_ingredients"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:text="@string/detail_ingredients"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:padding="5dp" />

                            <TextView
                                android:id="@+id/ingredientlist"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:text=""
                                android:textSize="15sp"
                                android:padding="5dp"
                                android:paddingStart="8dp"
                                android:lineSpacingExtra="8dp"/>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="56dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/detail_procedure"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/detail_procedure"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:padding="5dp"
                                android:layout_marginStart="15dp" />

                            <TextView
                                android:id="@+id/list_procedure"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:layout_marginStart="15dp"
                                android:layout_marginEnd="10dp"
                                android:padding="5dp"/>

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    <Button
        android:id="@+id/procedure_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="@string/inizia_procedura_guidata"
        android:textStyle="bold"
        android:layout_gravity="bottom|end"
        android:layout_margin="0dp"
        android:drawableStart="@mipmap/ic_play_arrow_white_24dp"
        android:textColor="@android:color/white"
        style="?android:attr/buttonBarButtonStyle"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/star_icon_preferences"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_margin="16dp"
        android:clickable="true"
        app:srcCompat="@drawable/star_off"
        app:layout_anchor="@id/header_container"
        app:layout_anchorGravity="bottom|right|end"
        android:backgroundTint="@android:color/holo_blue_light"/>

</android.support.design.widget.CoordinatorLayout>